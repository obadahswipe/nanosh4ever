    h1{font-family:'Great Vibes', 'Pacifico', cursive;font-size:clamp(2.6rem,5vw,4rem);color:var(--pink1);margin:6px 0;text-shadow:0 10px 30px rgba(255,107,157,0.12)}
    .subtitle{color:#6f2b46;font-size:1.05rem;margin-bottom:6px}
    .subtiny{color:#8a4461;font-size:0.95rem}

    /* Interactive controls */
    .controls{display:flex;gap:12px;flex-wrap:wrap;justify-content:center;margin-top:12px}
    .btn{background:linear-gradient(135deg,var(--pink1),var(--pink2));border:none;color:white;padding:12px 18px;border-radius:999px;font-weight:700;cursor:pointer;box-shadow:0 10px 30px rgba(255,107,157,0.14);transition:transform .12s ease}
    .btn.ghost{background:transparent;color:var(--accent);border:2px solid rgba(199,84,129,0.12)}
    .btn:active{transform:translateY(2px)}

    /* Countdown */
    .countdown{display:flex;gap:12px;justify-content:center;margin:22px 0;flex-wrap:wrap}
    .count-item{background:linear-gradient(180deg,#fff,#fff6fb);padding:14px 18px;border-radius:14px;min-width:90px;box-shadow:0 10px 30px rgba(199,84,129,0.06);text-align:center}
    .count-item .num{font-size:1.6rem;font-weight:800;color:var(--pink1)}
    .count-item .lbl{font-size:0.8rem;color:#7b3a53;letter-spacing:1px}

    /* Surprise timeline section (long expressive content) */
    .story{margin-top:8px;text-align:left;padding:20px;border-radius:16px;background:linear-gradient(180deg,#fff,#fff8fb);box-shadow:0 18px 60px rgba(199,84,129,0.06)}
    .story p{margin:10px 0;font-size:1.05rem;color:#4b2130}
    .story h3{color:var(--pink1);font-family:'Pacifico',cursive;margin-bottom:8px}

    /* Hidden messages */
    .hidden{display:none}
    .message{padding:14px;border-radius:12px;background:linear-gradient(180deg,#fff4fa,#fff0f6);margin-top:12px;border:1px solid rgba(199,84,129,0.06)}

    /* Floating hearts layer */
    .hearts-layer{position:fixed;inset:0;pointer-events:none;z-index:5}
    .floating-heart{position:absolute;font-size:22px;animation:floaty 8s linear infinite;opacity:0.9}
    @keyframes floaty{0%{transform:translateY(-10vh) rotate(0)}100%{transform:translateY(110vh) rotate(720deg);opacity:0}}

    /* Tiny surprises button grid */
    .surprises{display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:12px;margin-top:18px}
    .surprise-card{background:linear-gradient(180deg,#fff,#fffefc);padding:14px;border-radius:12px;cursor:pointer;box-shadow:0 8px 30px rgba(199,84,129,0.04);transition:transform .12s}
    .surprise-card:hover{transform:translateY(-6px)}

    /* Love letter modal */
    .overlay{position:fixed;inset:0;background:rgba(10,6,6,0.25);backdrop-filter:blur(6px);display:flex;align-items:center;justify-content:center;z-index:40;opacity:0;pointer-events:none;transition:opacity .22s}
    .overlay.show{opacity:1;pointer-events:auto}
    .modal{width:min(920px,96%);background:linear-gradient(180deg,#fff,#fff6fb);padding:26px;border-radius:18px;box-shadow:0 40px 120px rgba(0,0,0,0.28);position:relative}
    .close{position:absolute;right:14px;top:10px;font-size:20px;cursor:pointer}
    .typewriter{font-family:'Great Vibes',cursive;font-size:1.6rem;color:var(--pink1);min-height:120px}

    /* tiny voice UI */
    .recordings{margin-top:12px}

    /* footer */
    footer{margin-top:24px;padding:30px;border-radius:14px;background:linear-gradient(180deg,#fffaf7,#fff6fb);box-shadow:0 40px 100px rgba(199,84,129,0.04);text-align:center}
    footer .promise{font-family:'Pacifico',cursive;color:var(--pink1);font-size:1.4rem}

    /* responsive */
